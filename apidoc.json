{
    "swagger": "2.0",
    "info": {
        "title": "Content API",
        "description": "Handsome API to work with blocks",
        "version": "1.0.0"
    },
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/restaurants": {
            "get": {
                "summary": "Get all restaurants.",
                "responses": {
                    "200": {
                        "description": "Paginated restaurant collection",
                        "schema": {
                            "items": {
                                "$ref": "#/definitions/Restaurant"
                            }
                        }
                    }
                }
            }
        },
        "/restaurants/{restaurant}": {
            "get": {
                "summary": "Get a Restaurant.",
                "parameters": [
                    {
                        "name": "restaurant",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "x-example": "1"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get a restaurant",
                        "schema": {
                            "$ref": "#/definitions/Restaurant"
                        }
                    },
                    "404": {
                        "description": "Restaurant not found"
                    }
                }
            }
        },
        "/search": {
            "get": {
                "summary": "Very minimalistic implementation of a search by location with postgis.",
                "parameters": [
                    {
                        "name": "lat",
                        "in": "query",
                        "required": true,
                        "type": "number",
                        "default": 23.1
                    },
                    {
                        "name": "lng",
                        "in": "query",
                        "required": true,
                        "type": "number",
                        "default": 42.7
                    },
                    {
                        "name": "radius",
                        "in": "query",
                        "required": true,
                        "type": "number",
                        "default": 500
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Search by location results",
                        "schema": {
                            "items": {
                                "$ref": "#/definitions/Restaurant"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Restaurant": {
            "required": [
                "name",
                "address",
                "latitude",
                "longitude"
            ],
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "latitude": {
                    "type": "number",
                    "format": "float"
                },
                "longitude": {
                    "type": "number",
                    "format": "float"
                }
            },
            "type": "object"
        }
    }
}