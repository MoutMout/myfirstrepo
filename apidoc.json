{
    "swagger": "2.0",
    "info": {
        "title": "Content API",
        "description": "Handsome API to work with blocks",
        "version": "1.0.0"
    },
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/blocks": {
            "get": {
                "summary": "Get all blocs.",
                "responses": {
                    "200": {
                        "description": "Paginated block collection",
                        "schema": {
                            "items": {
                                "$ref": "#/definitions/Block"
                            }
                        }
                    }
                }
            }
        },
        "/blocks/{block}": {
            "get": {
                "summary": "Get a Block.",
                "parameters": [
                    {
                        "name": "block",
                        "in": "path",
                        "required": true,
                        "type": "string",
                        "x-example": "1"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get a block",
                        "schema": {
                            "$ref": "#/definitions/Block"
                        }
                    },
                    "404": {
                        "description": "Block not found"
                    }
                }
            }
        },
        "/tokens": {
            "post": {
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "description": "Authentication credentials",
                        "schema": {
                            "required": [
                                "username",
                                "password"
                            ],
                            "properties": {
                                "username": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Auth granted",
                        "schema": {
                            "properties": {
                                "apiKey": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Invalid credentials"
                    }
                }
            }
        }
    },
    "definitions": {
        "Block": {
            "required": [
                "body"
            ],
            "properties": {
                "id": {
                    "type": "integer"
                },
                "body": {
                    "type": "string"
                }
            },
            "type": "object"
        }
    }
}